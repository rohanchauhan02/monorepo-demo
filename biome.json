{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "organizeImports": true,
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "quoteStyle": "double",
    "trailingComma": "all",
    "semicolons": "asNeeded"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "typescript": {
        "noExplicitAny": "warn",
        "noUnusedVars": "error"
      },
      "react": {
        "jsxNoUselessFragment": "warn"
      }
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "coverage",
      "*.lock",
      "pnpm-lock.yaml"
    ]
  }
}
